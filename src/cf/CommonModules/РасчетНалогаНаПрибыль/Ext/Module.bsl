	//		2.3) 91-х;
	//		2.4) всех остальных счетов, кроме 90 и 91.
	
	СоздатьНастройкиСчетовДляРасчета(РасчетОНА_ОНО_ПНА_ПНО);
	
	СоздатьНастройкиСчетов90_91_ЕНВД(РасчетОНА_ОНО_ПНА_ПНО);
	
	СоздатьХозрасчетныйОстаткиИОбороты(РасчетОНА_ОНО_ПНА_ПНО);
	
	СоздатьОборотыПоКорСчетам(РасчетОНА_ОНО_ПНА_ПНО);
	
	СоздатьОбороты91(РасчетОНА_ОНО_ПНА_ПНО);
	
